#!/bin/sh
# See https://wiki.archlinux.org/index.php/Full_System_Backup_with_rsync

#if [ $# -lt 1 ]; then 
#    echo "No destination defined. Usage: $0 destination" >&2
#    exit 1
#elif [ $# -gt 1 ]; then
#    echo "Too many arguments. Usage: $0 destination" >&2
#    exit 1
#fi

START=$(date +%s)
rsync -aAXv /* /home/orschiro/Backup --exclude={/dev/*,/proc/*,/sys/*,/tmp/*,/run/*,/mnt/*,/media/*,/lost+found,/home/*/{Backup,.gvfs,},/var/lib/pacman/sync/*}
FINISH=$(date +%s)
echo "total time: $(( ($FINISH-$START) / 60 )) minutes, $(( ($FINISH-$START) % 60 )) seconds"

touch /home/orschiro/Backup/"Backup from $(date '+%A, %d %B %Y, %T')"

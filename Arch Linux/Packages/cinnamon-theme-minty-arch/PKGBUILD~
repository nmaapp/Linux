pkgname=cinnamon-theme-minty-arch
pkgver=1.0
pkgrel=1
pkgdesc="Cinnamon theme with some flavour of Linux Mint with blue colors"
url="http://cinnamon-spices.linuxmint.com/themes/view/25"
license=('GPL')
arch=('any')
depends=('cinnamon')
conflicts=('cinnamon-theme-minty')
source=("https://www.dropbox.com/s/hhejd1z20ldazb6/cinnamon-theme-minty-arch.zip")
md5sums=('f937705374ad9d1a5b31c93b3977ee85')

package() {
  find Minty/ -type f -exec install -Dm644 '{}' "$pkgdir/usr/share/themes/{}" \;
}
